<div class="vagov-c-linkteaser--item">



    {% if link.url %}
        <a href="{{ link.url }}" class="no-external-icon">{{ link.text }}</a>
    {% else %}
        {{ link }}
    {% endif %}

    <span class="vagov-c-linkteaser--header">
        <img class="all-link-arrow" src="assets/img/arrow-right.svg" alt="right-arrow" />
    </span>

    <p class="vagov-c-linkteaser--description">
        {{ link_summary }}
    </p>

</div>